    "db:studio": "prisma studio"
  },
  "dependencies": {
    "next": "^15.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
